{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "erasableSyntaxOnly": false,
    "paths": {
      "@root/*": ["./*"],
      "@components": ["./src/components"],
      "@pages": ["./src/pages"],
      "@constants": ["./src/constants"],
      "@assets/*": ["./src/assets/*"],
      "@providers": ["./src/providers"],
      "@sections": ["./src/sections"],
      "@models": ["./src/models"],
      "@shared/*": ["../../packages/shared/*"]
    }
  },
  "include": ["src"]
}
