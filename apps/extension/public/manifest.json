{
  "version": "2.0.1",
  "manifest_version": 3,
  "name": "Dual IP Info",
  "author": "Daniel Morohoschi",
  "homepage_url": "https://morohoschidanieliosif.me/",
  "description": "View public & private IPs with location, history, themes & alerts. Lightweight and privacy-friendly.",
  "permissions": ["storage", "notifications", "alarms", "idle"],
  "host_permissions": ["https://ipwho.is/"],
  "background": {
    "service_worker": "notification.js",
    "type": "module"
  },
  "action": {
    "default_popup": "./index.html",
    "default_icon": "icons/icon128.png",
    "default_title": "Dual IP Info"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
