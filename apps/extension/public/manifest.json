{
  "version": "2.0.0",
  "manifest_version": 3,
  "name": "Dual IP Info",
  "description": "One-click IP check for network troubleshooting, privacy, and curiosity. Get your public IP and location instantly.",
  "permissions": ["scripting"],
  "host_permissions": ["https://ipwho.is/"],
  "action": {
    "default_popup": "./index.html",
    "default_icon": "./icons/icon128.png",
    "default_title": "Dual IP Info"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
